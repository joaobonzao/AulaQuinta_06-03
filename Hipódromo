public class Exer2{
	public static void main(String[] args){
	    //Declarar variáveis
                     int cavalos, ferraduras;
                    Scanner ler = new Scanner(System.in);
              //Entrada de dados
                   System.out.println("Insira a quantidade e cavalos: ");
                     cavalos = ler.nextInt();
             //Processamento
                    ferraduras = cavalos * 4;
            //Saida de dados
                   System.out.println("Ferraduras necessárias: " + ferraduras);

	}
}
