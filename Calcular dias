public class Exer3{
	public static void main(String[] args){
        // Declarar variáveis
           String nome;
           int idade, dias;
           Scanner ler = new Scanner(System.in);
        //Entrada de dados
          System.out.println("Insira seu nome: ");
          nome = ler.nextLine();
          System.out.println("Insira sua idade: ");
          idade = ler.nextInt();
        //Processamento
          dias = idade *365;
        //Saida de dados
          System.out.println(nome + " VOCÊ JÁ VIVEU "+ dias);
	}
}
